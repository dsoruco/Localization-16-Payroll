<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_reportes_disability_form" model="ir.ui.view">
            <field name="name">Reportes de discapacidad</field>
            <field name="model">hr.payroll.disability</field>
            <field name="arch" type="xml">
                <form string="Formulario Incapacidad">
                    <sheet>
                        <group>
                            <field name="form_type" />
                            <field name="month" />
                            <field name="year" />
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_generate_report" string="Generar" type="object"
                            class="btn-primary" />
                        <button string="Cancelar" class="btn-secondary" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>